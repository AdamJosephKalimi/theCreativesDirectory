@import "../../fonts/fonts.wxss";

/* pages/home-directory/home-directory.wxss */

.profile-picture {
    height: 110rpx;
    width: 110rpx;
    border-radius: 50%;
    float: left;
}

.card-body {
    display: block;
    background-color: white;
    padding: 24rpx;
    margin-bottom: 24rpx;
}

.card-head {
    height: 110rpx;
}

.card-head-text {
    margin-left: 140rpx;
    display: block;
    line-height: 1;
}

.card-title {
    display: block;
    font-size: 44rpx;
    line-height: 1;
    font-family: "NewYork Medium";
}

.card-tags {
    display: inline-block;
    font-size: 24rpx;
    font-family: "NewYork";
}

.card-description {
    display: block;
    line-height: 1.4;
    margin-top: 24rpx;
    font-size: 24rpx;
    font-family: "Less";
}

.page-wrapper {
    background-color: rgb(246, 243, 239);
    padding-top: 80rpx;
    padding-left: 60rpx;
    padding-right: 60rpx;
    padding-bottom: 80rpx;
}

.home-head {
    font-size: 68rpx;
    font-family: "NewYork Black";
    line-height: 1.2;
}

.home-subhead {
    line-height: 1.2;
    font-size: 60rpx;
    font-family: "NewYork Medium";
    margin-bottom: 64rpx;
    display: block;
}

.line {
    margin-bottom: 32rpx;
    height: 10rpx;
    background-color: black;
    width: 100%;
}

.button-style-a-active {
    font-family: "Less Bold";
    background-color: white;
    border: 1px solid black;
    border-radius: 0;
    display: inline-block;
    font-size: 28rpx;
    line-height: 1;
    padding-top: 22rpx;
    padding-bottom: 22rpx;
    padding-left: 32rpx;
    padding-right: 32rpx;
    margin-right: 32rpx;
    margin-bottom: 24rpx;
}

.button-style-a-normal {
    font-family: "Less";
    font-size: 28rpx;
    background-color: transparent;
    border: 1px solid black;
    border-radius: 0;
    display: inline-block;
    line-height: 1;
    padding-top: 22rpx;
    padding-bottom: 22rpx;
    padding-left: 32rpx;
    padding-right: 32rpx;
    margin-bottom: 24rpx;
}

.nav-home-icon{
    width: 90rpx;
  }
  
  .nav-portfolio-icon{
    width: 61rpx;
  }
  
  .navBar{
    position: fixed;
    z-index: 10000;
    top: 90vh;
    height: 10vh;
    background-color: white;
    width: 100%;
  }
  
  .icon-wrapper{
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-family: "NewYorK";
    margin-top: 1.75vh;
  }
  
  .nav-text-wrapper{
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 20rpx;
  }